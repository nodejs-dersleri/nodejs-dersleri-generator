doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway:800')
      
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/lib/highlight/styles/github.css')
      link(rel='stylesheet', href='/fonts/octicons/octicons.css')
      link(rel='stylesheet', href='/css/main.css')

  body(class=bodyclass)
    
    // Begin: Aside
    aside#particles-js
      h1
        a(href=locals.url)= locals.name
      p= locals.description
    // End: Aside
    
    // Begin: Content
    main(role=main) 
      block content
      // Begin: Footer
      footer
        block footer
          span.made-with-heart
            span.octicon.octicon-pencil
            |  with 
            span.octicon.octicon-heart 
            |  by  
            a(href='http://www.github.com/arifcakiroglu') Arif Cakiroglu
            
            
      
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='/javascript/particles.min.js')
    script(src='/javascript/canvas.js')
    
    
    script(src='/lib/highlight/highlight.pack.js')
    script.
      $(document).ready(function() {
        $('pre code').each(function(i, block) {
          hljs.highlightBlock(block);
        });
      });
      
          //section.about
            //!=contents['about.md'].html
      // End: Footer
    // End: Content
    
    
